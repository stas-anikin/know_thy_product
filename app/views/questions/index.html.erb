<h1 class="text-center mt-4">Create questions for <%=@quiz.name%> quiz</h1>
<div class="content">
  <%= render "shared/errors", obj: @quiz %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 m-auto">
        <div class="card">
          <div class="card-header card-header-success text-center">
            <h4 class="card-title">Please enter your questions, select the correct answer for each question and click on create quiz button once you are done</h4>
          </div>
          <div class="card-body">
            <%= form_with(model: @quiz, local: true) do |quiz_form| %>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= quiz_form.label :name, "Name of the quiz", class: "bmd-label-floating"  %>
                    <%= quiz_form.text_field :name, class: "form-control", placeholder: "name of a quiz" %>
                  </div>
                </div>
              </div>
              <%= quiz_form.fields_for :questions do |question_form| %>
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-md-8 m-auto">
                      <div class="card">
                        <div class="card-header card-header text-center", style='background-color: rgb(155, 216, 90)'>
                          <h4 class="card-title">Please enter your question followed by possible answers and mark the correct answer</h4>
                        </div>
                        <div class="row">
                          <div class="col-md-11 m-auto">
                            <div class="form-group">
                              <%= question_form.text_field :name, class: "form-control", placeholder: 'enter you question here' %>
                            </div>
                          </div>
                        </div>
                        <%= question_form.fields_for :options do |option|%>
                          <div class="row">
                            <div class="col-md-10 mb-2 m-auto">
                              <div class="form-group">
                                <%=option.text_field :name, class: "form-control", placeholder: 'enter answer option here' %>
                                <span>  <%= option.label :is_correct, 'correct answer', class: "form-check-label"  %>
                                  <%= option.check_box :is_correct, {}, true, false %></span>
                              </div>
                            </div>
                          </div>
                        <%end%>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="form-group row justify-content-center">
                  <%= quiz_form.submit class: "btn btn-success btn-lg" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
