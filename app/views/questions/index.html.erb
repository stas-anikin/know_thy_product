<h1 class="text-center mt-4">Questions for <%= @quiz.name %> quiz</h1>


<div class="container">
  <% @questions.each do |question| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
<div class="card">
                <div class="card-header card-header-success">
            <%= question.name %>
          </div>
          <div class="card-body">
         <div class="form_row">
    <label for="option">What's your answer?</label>
<% question.options.each do |option| %>          
      <br><%= radio_button_tag "option", option.name, @option == option %> <%= option.name %>

<% if option.is_correct %>
          <p class='card-text'>    And the correct answer is <%= option.name %></p>
<% end %>
<% end %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>