<div class="content">
  <%= render "shared/errors", obj: @user %>
  <div class="container">
    <div class="col-12 mt-4 offset-md-1">
      <h1 class="text-center mt-4">You can update your profile here</h1>
      <div class="col-md-10 m-auto">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">Your Profile</h4>
          </div>
          <div class="card-body">
            <%= form_with(model: @user, local: true) do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :first_name, class: "bmd-label-floating" %>
                    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name", :required => true %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :last_name, class: "bmd-label-floating" %>
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name", :required => true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-7">
                  <div class="form-group">
                    <%= f.label :email, class: "bmd-label-floating" %>
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", :required => true %>
                  </div>
                </div>
                <%= f.collection_select :role_id, Role.all.order(name: :desc), :id, :name, { :prompt => true }, { class: "btn mx-auto btn-outline-light" } %>
              </div>
              <div class="form-group row justify-content-center">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
