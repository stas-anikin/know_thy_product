<div class="content">
  <div class="container">
    <div class="col-12 mt-4 offset-md-1">  <%= render "shared/errors", obj: @user %>
      <h1 class="text-center mt-4">Change your password here</h1>
      <div class="col-md-10 m-auto">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">New password must be different from the previous password
              <h4>
              </div>
              <div class="card-body">
                <%= form_with(model: @user, url: update_password_path(@user), local: true) do |f| %>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <%= f.label :current_password, class: "bmd-label-floating" %>
                        <%= f.password_field :current_password, class: "form-control", placeholder: "Enter your current password", :required => true %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <%= f.label :new_password, class: "bmd-label-floating" %>
                        <%= f.password_field :new_password, class: "form-control", placeholder: "Create a password", :required => true %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <%= f.label :new_password_confirmation, class: "bmd-label-floating" %>
                        <%= f.password_field :new_password_confirmation, class: "form-control", placeholder: "Confirm your password", :required => true %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row justify-content-center">
                    <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
