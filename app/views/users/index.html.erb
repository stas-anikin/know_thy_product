<h1 class="text-center mt-4">KTP Users</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <div class="row justify-content-md-center">
    <% @users.each do |user| %>
      <div class="col-8 mt-4 offset-md-1">
        <div class="card">
          <div class="card-header card-header-primary">
            <%= link_to user.full_name, user, class: "text-light" %>
          </div>
          <div class="card-body">
            <p class="card-text">works as <%= user.role&.name || "Role no longer exists" %></p>
            <p class="card-text">in the <%= user.role&.department&.name || "Department no longer exists" %> department </p>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
