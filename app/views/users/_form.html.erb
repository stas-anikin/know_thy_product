<div class="content">                
  <%= render "shared/errors", obj: @user %>
  <div class="container-fluid">
    <div class="row">

      <div class="col-md-8 m-auto">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">Enter Your Information</h4>
          </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :first_name, class: "bmd-label-floating" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name", :required => true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :last_name, class: "bmd-label-floating" %>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name", :required => true %>
              </div>
            </div>
             </div>
          <div class="row">
            <div class="col-md-10">

        <div class="form-group">

          <%= f.label :email, class: "bmd-label-floating" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", :required => true %>
          
          </div>
          
        </div>
             <%= f.collection_select :role_id, Role.all.order(name: :desc), :id, :name, { :prompt => true }, { class: "btn btn-outline-light" } %>

          </div>
    <div class="row">
            <div class="col-md-12">

        <div class="form-group">
          <%= f.label :password, class: "bmd-label-floating" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Create a password", :required => true %>
          </div>
        </div>
        </div>
    <div class="row">
            <div class="col-md-12">

        <div class="form-group">
          <%= f.label :password_confirmation, class: "bmd-label-floating" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", :required => true %>
          </div>
        </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      <% end %>
</div>
    
  </div>
</div>