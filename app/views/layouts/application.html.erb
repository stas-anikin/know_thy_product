<!DOCTYPE html>
<html>
  <head>
    <title>KnowThyProduct</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_pack_tag "application" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" %>
    <%# <%= favicon_link_tag asset_path("logo.jpeg") %> %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" %>
  </head>
  <body>
    <div id="bg">
      <img src="/assets/background.jpeg" alt="background img">
    </div>
    <%= render "layouts/sidebar" %>
    <%= render "layouts/navbar" unless @disable_navbar&&!user_signed_in? %>
    <div class="wrapper">
      <%= render "layouts/messages" %>
      <main class="flex-fill">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
