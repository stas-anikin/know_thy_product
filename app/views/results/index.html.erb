<h1 class="text-center mt-4">Results so far</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <div class="row justify-content-md-center">
    <% @results.each do |result| %>
      <div class="col-8 mt-4 offset-md-1">
        <div class="card">
          <div class="card-header card-header-success">
            <%= link_to(result.id, result_path(result), class: "text-white") %>
          </div>
          <div class="card-body">
            <p class='card-text'>
              answered by: <%= result.user.full_name %>
            </p>
            <p class='card-text'>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
