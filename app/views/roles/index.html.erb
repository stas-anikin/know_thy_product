<h1 class="text-center mt-4">Currently available roles</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <div class="row justify-content-md-center">
    <% @roles.each do |role| %>
      <div class="col-8 mt-4 offset-md-1">
        <div class="card">
          <div class="card-header card-header-warning">
            <%= link_to(role.name, role_path(role), class: "text-white") %>
          </div>
          <div class="card-body">
            <%role.users.each do |user|%>
              <p class='card-text'>
                <%=user.full_name%>
              </p>
            <%end%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
