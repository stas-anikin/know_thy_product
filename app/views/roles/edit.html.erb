<h1 class="text-center mt-4">Create new role</h1>
<div class="container">
  <%= render "shared/errors", obj: @role %>
  <div class="row justify-content-md-center">
    <div class="col-md-8 offset-md-1 m-auto">
      <div class="card">
        <div class="card-header card-header-warning">
          <h4 class="card-title">New Role</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @role, local: true) do |form| %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group row justify-content-center">
                  <%= form.label :name, class: "bmd-label-floating" %>
                  <%= form.text_field :name, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group row justify-content-center">
                <%= form.label :department, class: "bmd-label-floating" %>
              </div>
            </div>
            <div class="form-group row justify-content-center">
              <%= form.collection_select :department_id, Department.all.order(name: :asc), :id, :name, { :prompt => true }, { class: "btn btn-outline-light" } %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= form.submit class: "btn btn-warning btn-lg" %>
          </div>
          <div class="form-group row justify-content-center">
            <div class="mb-3">
              <%= link_to "[ Cancel and return to home page ]", home_path, class: "text-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
