
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
              <%= render "shared/errors", obj: @quiz %>
            <%= form_with(model: @quiz, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
            <div class="form-group row">
                    <%= form.label :name, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Quiz name" %>
                        </div>
                    </div>
                        <div class="form-group row">
                        <%= form.label :description, class: "col-2 col-form-label text-light" %>
                            <div class="col-10">
                                <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of product" %>
                            </div>
                        </div>
                    <div class="form-group row">
                        <%= form.label :price, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                        <%= form.text_field :price, rows: 10, class: "form-control shadow rounded", placeholder: "Product price" %>
                        </div>
                    </div>    
                    <div>
                    <%= form.collection_check_boxes :tag_ids, Tag.order(name: :asc), :id, :name do |t| %>
    <%= t.check_box %>
    <%= t.text %>
<% end %>
                    </div> 
                <div class="form-group row justify-content-center">
                <%= form.submit class: "btn btn-outline-light btn-lg" %>
                </div>
                <% end %>
            </div>
                <div class="mb-3">
                    <%= link_to "[ Cancel and return to products listing ]", products_path, class: "text-info" %>
                 </div>
        </div>
    </div>
</div>

