
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
              <%= render "shared/errors", obj: @quiz %>
            <%= form_with(model: @quiz, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
            <div class="form-group row">
                    <%= form.label :name, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Quiz name" %>
                        </div>
                    </div>
                        
                    <div class="form-group row">
                        <%= form.label :number_of_questions, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                        <%= form.text_field :number_of_questions, rows: 10, class: "form-control shadow rounded", placeholder: "Number of questions" %>
                        </div>
                    </div>    
                    <div>
                      </div> 
                <div class="form-group row justify-content-center">
                <%= form.submit class: "btn btn-outline-light btn-lg" %>
                </div>
                <% end %>
            </div>
                <div class="mb-3">
                    <%= link_to "[ Cancel and return to quiz index ]", quizzes_path, class: "text-info" %>
                 </div>
        </div>
    </div>
</div>

