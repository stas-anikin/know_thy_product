<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header">
                    Quiz name: <%= @quiz.name %>
                </div>    
                    created by: <%= @quiz.user.full_name %>
                <div class="card-body">
                    <p class='card-text'>Here are the questions for the quiz</p>
                        <% @quiz.questions.each do |question| %>
                    <p class="card-text"><%= question.name %> <% question.options.each do |option| %><%= option.name %>, <% end %></p>
          
                     <% end %>
      </div>
          </div>
        </div>
      </div>
    </div>

</div>