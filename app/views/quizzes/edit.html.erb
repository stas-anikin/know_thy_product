
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
              <%= render "shared/errors", obj: @quiz %>
          <div class="card text-center shadow mt-4 mb-5 bg-white rounded">
                    <div class="card-header">
                        Write your question
                    </div>
                        <%= form_with model: [@quiz, @question], class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
                        <%= render "shared/errors", obj: @question %>
                <div class='shadow-sm p-3 mb-5 bg-white round'>
                    Your question <%= f.text_area :name,
                                                  cols: 50,
                                                  rows: 5,
                                                  placeholder: "What do you want to ask?" %>
                </div>
      <% 4.times do |option| %>        

  <div class="form-group row">
                    <%= f.label :option, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= f.text_field :option, class: "form-control shadow rounded", placeholder: "enter an answer" %>
                        </div>
                    </div>
<% end %>

                    <%= f.submit class: "btn btn-primary" %>
                        <% end %>
                <div class="mb-3">




                    <%= link_to "[ Cancel and return to quiz index ]", quizzes_path, class: "text-info" %>
                 </div>
        </div>
    </div>
</div>

