<h1 class="text-center mt-4">Current Quiz Assignments</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <div class="row justify-content-md-center">
    <% @quiz_assignments.each do |qa| %>
      <div class="col-8 mt-4 offset-md-2">
        <div class="card">
          <div class="card-header card-header-success">
            <%= qa.quiz.name %>
          </div>
          <div class="card-body">
            <p class='card-text'>
              has been assigned to <%=qa.role.name.pluralize%>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
