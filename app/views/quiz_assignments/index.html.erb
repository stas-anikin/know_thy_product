<h1 class="text-center mt-4">Current Quiz Assignments</h1>
<div class="container">
  <% @quiz_assignments.each do |qa| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4 offset-md-1">
        <div class="card">
          <div class="card-header card-header-success">
            <%= qa.quiz.name %>
          </div>
          <div class="card-body">
            <p class='card-text'>
              has been assigned to <%=qa.role.name.pluralize%>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
